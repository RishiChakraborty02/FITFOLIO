<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="workstyle.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oxygen:wght@300&display=swap"
      rel="stylesheet"
    />
    <script src="workpref.js"></script>
  </head>
  <body>
    <div class="container">
      <h1>Your workout Preferences</h1>
      <form id="preferencesForm">
        <div class="checkbox-group">
          <input
            type="checkbox"
            id="basketball"
            name="options"
            value="Option 1"
          />
          <label for="basketball">Basketball</label>
        </div>
        <div class="checkbox-group">
          <input type="checkbox" id="Cardio" name="options" value="Option 2" />
          <label for="Cardio">Cardio</label>
        </div>
        <div class="checkbox-group">
          <input
            type="checkbox"
            id="Football"
            name="options"
            value="Option 2"
          />
          <label for="Football">Football</label>
        </div>
        <div class="checkbox-group">
          <input type="checkbox" id="Core" name="options" value="Option 2" />
          <label for="Core">Core</label>
        </div>
        <div class="checkbox-group">
          <input type="checkbox" id="Running" name="options" value="Option 2" />
          <label for="Running">Running</label>
        </div>
        <div class="checkbox-group">
          <input
            type="checkbox"
            id="Swimming"
            name="options"
            value="Option 2"
          />
          <label for="Swimming">Swimming</label>
        </div>
        <div class="checkbox-group">
          <input type="checkbox" id="Yoga" name="options" value="Option 2" />
          <label for="Yoga">Yoga</label>
        </div>
        <div class="checkbox-group">
          <input
            type="checkbox"
            id="Weights - light"
            name="options"
            value="Option 2"
          />
          <label for="Weights - light">Weights - light</label>
        </div>
        <div class="checkbox-group">
          <input
            type="checkbox"
            id="Weights - Heavy"
            name="options"
            value="Option 2"
          />
          <label for="Weights - Heavy">Weights - Heavy</label>
        </div>
        <div class="checkbox-group">
          <input type="checkbox" id="Lunges" name="options" value="Option 2" />
          <label for="Lunges">Lunges</label>
        </div>
        <div class="checkbox-group">
          <input type="checkbox" id="Squats" name="options" value="Option 2" />
          <label for="Squats">Squats</label>
        </div>
        <div class="checkbox-group">
          <input
            type="checkbox"
            id="Skipping"
            name="options"
            value="Option 2"
          />
          <label for="Skipping">Skipping</label>
        </div>

        <button type="submit">Submit</button>
      </form>
    </div>

    <script src="script.js"></script>
  </body>
</html>
